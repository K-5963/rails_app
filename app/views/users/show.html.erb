<div class="top">
  <p>ユーザー詳細ページ</p>
  <%= render @user %>
  <% if current_user == @user %>
    <p><%= link_to "ユーザー情報を編集", edit_user_path %></p>
  <% elsif Relationship.find_by(follower_id: current_user.id, followed_id: @user.id)  %>
    <p><%= link_to "フォロー解除", unfollow_user_path(@user), method: :delete %></p>
  <% else %>
    <p><%= link_to "フォロー", follow_user_path(@user), method: :post %></p>
  <% end %>
    
  <p><%= link_to "いいねした本", favorites_user_path %></p>
  
  <p><%= link_to "フォローしているユーザー", following_users_user_path %></p>
  <p><%= link_to "フォロワー", followers_user_path %></p>
  
  <p><%= link_to "削除", @user, method: :delete, data: { confirm: "削除していいですか？"} %></p>
</div>